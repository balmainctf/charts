<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width user-scalable=no">
    <title>PlantList</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style/dashboard.css"/>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-phone"></span>&nbsp;Zevercloud</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse" aria-expanded="false" style="height: 1px;">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/logout">LOGOUT</a></li>
            </ul>

        </div>
    </div>
</div>
<div class="container">
    <div class="main">
        <h4 class="page-header">Plant List</h4>
        <% plants.forEach(function(plant, index){ %>
        <div class="row portfolio-block" data-sid="<%= plant.id %>">
            <h4><%= plant.name %></h4>

            <div class="col-xs-4  portfolio-text">
                <img class="img-rounded" src="http://www.zevercloud.com<%= plant.iconURL %>" alt="">

            </div>
            <div class="col-xs-8 portfolio-stat">
                <div class="portfolio-info">
                    E-Today
                    <span>
                        <%= plant.etoday %> <%= plant.etodayUnit %>
                    </span>
                </div>
                <div class="portfolio-info">
                    E-Month
                    <span>
                        <%= plant.emonth %> <%= plant.emonthUnit %>
                    </span>
                </div>
                <div class="portfolio-info">
                    E-Total
                    <span>
                        <%= plant.etotal %> <%= plant.etotalUnit %>
                    </span>
                </div>

                <div class="portfolio-info">
                    Status
                    <span>
                        <%= plant.status %>
                    </span>
                </div>
            </div>
            <i class="share_station fa fa-group"></i>

        </div>
        <% }) %>
    </div>
</div>
<script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
<script>
    $(function () {
        $('.portfolio-block').click(function () {
            var sid = $(this).data('sid');
            window.location.href = '/plant/' + sid + '/e_power/bydays'
        })
    })
</script>
</body>
</html>