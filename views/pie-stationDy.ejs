<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>电站动态信息图</title>
</head>
<body>
<div id="main" style="height:500px;width:650px;border:1px solid #ccc;padding:10px;"></div>
</body>
<script src="/js/jquery-1.11.0.min.js"></script>
<script src="/js/echarts-plain.js"></script>
<script>
    var myChart = echarts.init(document.getElementById('main'));

    $.getJSON('data/stationDynamicInfo.json',function(data){

    });
    myChart.setOption({
        title: {
            text: '电站动态信息',
            subtext: '纯属虚构',
            x: 'center'
        },
        tooltip: {
            trigger: 'item',
            formatter: "{a} <br/>{b} : {c} ({d}%)"
        },
        legend: {
            orient: 'vertical',
            x: 'left',
            data: ['今日发电量', '月发电量', '总发电量', '总收益', 'CO2减排量']
        },
        toolbox: {
            show: true,
            feature: {
                mark: {show: true},
                dataView: {show: true, readOnly: false},
                restore: {show: true},
                saveAsImage: {show: true}
            }
        },
        calculable: true,
        series: [
            {
                name: '动态信息',
                type: 'pie',
                radius: '55%',
                center: ['50%', 225],
                data: [
                    {value: 335, name: '今日发电量'},
                    {value: 310, name: '月发电量'},
                    {value: 234, name: '总发电量'},
                    {value: 135, name: '总收益'},
                    {value: 1548, name: 'CO2减排量'}
                ]
            }
        ]
    });
</script>
</html>